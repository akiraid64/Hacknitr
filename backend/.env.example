# ==========================================
# TOOL Inc Backend Environment Variables
# ==========================================
# Copy this file to .env and fill in your values

# ==========================================
# DATABASE
# ==========================================
DATABASE_NAME=toolinc_system.db
DATABASE_PATH=./

# ==========================================
# SERVER
# ==========================================
PORT=8000
HOST=0.0.0.0
RELOAD=true
DEBUG=true

# ==========================================
# AUTHENTICATION
# ==========================================
# Generate a secure random key for production
# Example: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# ==========================================
# CORS (Frontend URLs)
# ==========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# ==========================================
# GOODWILL TOKEN ECONOMICS
# ==========================================
# Formula: Market Price (₹) × MULTIPLIER = GOODWILL Tokens
# Example: ₹1000 × 0.00001 = 0.01 GOODWILL
GOODWILL_TOKEN_MULTIPLIER=0.00001
GOODWILL_TOKEN_NAME=GOODWILL

# ==========================================
# PHASE 4: GEMINI AI (Currently Optional)
# ==========================================
# Get your API key from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_ENABLE_GROUNDING=true

# Market Price Lookup Settings
GEMINI_PRICE_CACHE_HOURS=24
GEMINI_MAX_RETRIES=3

# NGO Verification Settings
GEMINI_VERIFICATION_ENABLED=false
GEMINI_MIN_CONFIDENCE_SCORE=0.7

# ==========================================
# PHASE 4: WEATHER API (Currently Optional)
# ==========================================
# Get your API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5

# Weather Cache Settings
WEATHER_CACHE_HOURS=3
WEATHER_ENABLED=false

# ==========================================
# PHASE 4: FESTIVAL API (Currently Optional)
# ==========================================
# Get your API key from: https://calendarific.com/
CALENDARIFIC_API_KEY=your_calendarific_api_key_here
CALENDARIFIC_BASE_URL=https://calendarific.com/api/v2

# Festival Settings
FESTIVAL_CACHE_DAYS=30
FESTIVAL_COUNTRY=IN
FESTIVAL_ENABLED=false

# ==========================================
# DUMMY ACCOUNTS (For Testing)
# ==========================================
# These are created automatically by seed_data.py
DUMMY_NGO_EMAIL=test@ngo.org
DUMMY_NGO_PASSWORD=test123
DUMMY_RETAILER_EMAIL=bigbazaar@retail.com
DUMMY_MANUFACTURER_EMAIL=factory@britannia.com

# ==========================================
# FILE STORAGE
# ==========================================
# QR Code Storage
QR_CODE_STORAGE_PATH=./qr_codes/
QR_CODE_FORMAT=PNG
QR_CODE_SIZE=300

# Upload Storage
UPLOAD_DIR=./uploads/
MAX_UPLOAD_SIZE_MB=10

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=./logs/toolinc.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==========================================
# SECURITY
# ==========================================
# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# Password Requirements
MIN_PASSWORD_LENGTH=6
REQUIRE_UPPERCASE=false
REQUIRE_NUMBERS=false

# Session Settings
SESSION_TIMEOUT_HOURS=24

# ==========================================
# PHASE 4: SMS/OTP (Future - Optional)
# ==========================================
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_here
SMS_ENABLED=false

# ==========================================
# PHASE 4: EMAIL (Future - Optional)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@toolinc.com
EMAIL_ENABLED=false

# ==========================================
# AI/ML MODEL SETTINGS (Future)
# ==========================================
# Demand Prediction
LSTM_MODEL_PATH=./models/demand_lstm.h5
LSTM_ENABLED=false
LSTM_TRAINING_DAYS=90
LSTM_PREDICTION_DAYS=7

# Auto-Reorder Thresholds
AUTO_REORDER_ENABLED=false
AUTO_REORDER_MIN_CONFIDENCE=0.8

# ==========================================
# ADMIN SETTINGS
# ==========================================
ADMIN_EMAIL=admin@toolinc.io
ADMIN_PASSWORD=admin123
ADMIN_APPROVAL_REQUIRED=false

# ==========================================
# DEVELOPMENT/TESTING
# ==========================================
# Set to true to populate database with test data
SEED_DATABASE_ON_START=false

# API Documentation
DOCS_ENABLED=true
DOCS_URL=/docs
REDOC_URL=/redoc

# Testing
TESTING=false
TEST_DATABASE=toolinc_test.db
