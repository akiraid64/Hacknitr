# Frontend Environment Variables for TOOL Inc Platform (Next.js)

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# Legacy API (backward compatibility)
NEXT_PUBLIC_LEGACY_API_URL=http://localhost:8000

# App Configuration
NEXT_PUBLIC_APP_NAME=TOOL Inc
NEXT_PUBLIC_APP_VERSION=3.0.0

# Features Flags (enable/disable features)
NEXT_PUBLIC_ENABLE_AI_PREDICTIONS=true
NEXT_PUBLIC_ENABLE_LIVE_DASHBOARD=true
NEXT_PUBLIC_ENABLE_NGO_VERIFICATION=false

# Auto-refresh intervals (milliseconds)
NEXT_PUBLIC_DASHBOARD_REFRESH_INTERVAL=5000
NEXT_PUBLIC_INVENTORY_REFRESH_INTERVAL=10000
NEXT_PUBLIC_ALERTS_REFRESH_INTERVAL=60000

# Development
NEXT_PUBLIC_DEBUG=true
